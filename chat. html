<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emergency Chat</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="bg-gray-100 h-screen flex flex-col font-sans">

    <div class="bg-orange-600 p-4 text-white shadow-lg flex justify-between items-center z-10">
        <h1 class="font-bold text-lg"><i class="fa-solid fa-triangle-exclamation"></i> Emergency Mode</h1>
        <button onclick="clearChat()" class="text-xs bg-orange-800 px-2 py-1 rounded">Reset</button>
    </div>

    <div class="flex-1 flex flex-col overflow-hidden relative">
        <div id="message-container" class="flex-1 overflow-y-auto p-4 space-y-3 bg-slate-50">
            <div class="text-center text-gray-400 text-xs mt-4">
                System Failure Bypass Active.<br>
                Chat is working offline on your device.
            </div>
        </div>

        <div class="p-3 bg-white border-t shadow-lg flex gap-2 items-center">
            <input id="chat-username" type="text" placeholder="Name" class="w-20 p-2 border rounded-lg text-sm bg-gray-50">
            <input id="chat-input" type="text" placeholder="Message..." class="flex-1 p-2 border rounded-lg text-sm bg-gray-50">
            <button onclick="sendMessage()" class="bg-orange-600 text-white w-10 h-10 rounded-lg shadow-md hover:bg-orange-700">
                <i class="fa-solid fa-paper-plane"></i>
            </button>
        </div>
    </div>

    <script>
        // 1. SYSTEM BYPASS: Save to LocalStorage
        const savedMessages = JSON.parse(localStorage.getItem('emergency_chat')) || [];
        const container = document.getElementById('message-container');

        function loadMessages() {
            if(savedMessages.length === 0) {
                 container.innerHTML = '<div class="text-center text-gray-400 text-xs mt-4">System Failure Bypass Active.<br>Chat is working offline.</div>';
            } else {
                container.innerHTML = '';
                savedMessages.forEach(msg => displayMessage(msg));
            }
        }

        function displayMessage(msg) {
            const myName = document.getElementById('chat-username').value || "User";
            const isMe = msg.username === myName;
            
            const html = `
                <div class="flex flex-col ${isMe ? 'items-end' : 'items-start'}">
                    <span class="text-[10px] text-gray-400 px-1">${msg.username}</span>
                    <div class="${isMe ? 'bg-orange-600 text-white' : 'bg-white text-gray-800 border'} px-4 py-2 rounded-2xl text-sm max-w-[85%] shadow-sm">
                        ${msg.content}
                    </div>
                </div>`;
            container.insertAdjacentHTML('beforeend', html);
            container.scrollTop = container.scrollHeight;
        }

        function sendMessage() {
            const username = document.getElementById('chat-username').value.trim() || "User";
            const content = document.getElementById('chat-input').value.trim();
            if (!content) return;

            const newMessage = { username, content, id: Date.now() };
            savedMessages.push(newMessage);
            localStorage.setItem('emergency_chat', JSON.stringify(savedMessages));
            displayMessage(newMessage);
            document.getElementById('chat-input').value = "";
        }

        function clearChat() {
            localStorage.removeItem('emergency_chat');
            location.reload();
        }

        loadMessages();
    </script>
</body>
</html>
